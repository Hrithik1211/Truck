<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/moneyvehicle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:paddingLeft="10dp"
                android:textSize="25dp"
                android:textColor="#581845"

                />





            <TextView
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:paddingLeft="10dp"
                android:textSize="25dp"
                android:textColor="#581845"

                android:id="@+id/moneymaterial"
                android:layout_below="@+id/moneyvehicle"
                />

            <TextView
                android:id="@+id/moneyweight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/moneymaterial"
                android:fontFamily="sans-serif"
                android:paddingLeft="10dp"
                android:textSize="25dp"
                android:textColor="#581845"


                />

            <TextView
                android:id="@+id/moneylocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/moneyweight"
                android:textColor="#581845"
                android:fontFamily="sans-serif"
                android:paddingLeft="10dp"
                android:textSize="25dp"


                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/search_layout"
                android:layout_below="@+id/moneylocation"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:paddingRight="25dp"
                android:paddingLeft="25dp"
                android:id="@+id/drivernumber"
                android:inputType="number"
                android:hint="Driver Mobile Number"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/search_layout"
                android:layout_below="@+id/drivernumber"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:paddingRight="25dp"
                android:paddingLeft="25dp"
                android:id="@+id/vehiclenumber"
                android:hint="Vehicle Number"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/search_layout"
                android:layout_below="@+id/vehiclenumber"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:paddingRight="25dp"
                android:paddingLeft="25dp"
                android:id="@+id/bidmoney"
                android:inputType="number"
                android:hint="Place the Bid"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/search_layoutbutton"
                android:layout_below="@id/bidmoney"
                android:text="Make Bid"
                android:textColor="#581845"
                android:id="@+id/submit"
                />

        </RelativeLayout>

    </ScrollView>
</RelativeLayout>